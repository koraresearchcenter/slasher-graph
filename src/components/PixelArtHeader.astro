<style>
.pixel-art-header {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    background: linear-gradient(180deg, #0a0a14 0%, #1a0a0a 50%, #0a0a0a 100%);
    overflow: hidden;
    padding: 40px 20px;
}

.scene-container {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 60px;
    max-width: 1400px;
    width: 100%;
    align-items: center;
    position: relative;
    z-index: 2;
}

/* Scenes */
.scene {
    position: relative;
    height: 400px;
    image-rendering: pixelated;
    image-rendering: -moz-crisp-edges;
    image-rendering: crisp-edges;
}

/* LEFT SCENE - CRYSTAL LAKE (JASON) */
.left-scene {
    background: linear-gradient(180deg, #1a1a2e 0%, #0f3a2e 50%, #0a1a1a 100%);
    border: 4px solid #2a4a3a;
    box-shadow: inset 0 0 50px rgba(0, 0, 0, 0.8);
    position: relative;
}

.trees {
    position: absolute;
    bottom: 80px;
    width: 100%;
}

.tree {
    position: absolute;
    width: 40px;
    height: 80px;
    background: #1a3a2a;
    bottom: 0;
}

.tree::before {
    content: '';
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 30px solid transparent;
    border-right: 30px solid transparent;
    border-bottom: 40px solid #2a4a3a;
}

.tree-1 { left: 20px; }
.tree-2 { left: 50%; transform: translateX(-50%); height: 100px; }
.tree-3 { right: 20px; height: 70px; }

.cabin {
    position: absolute;
    bottom: 100px;
    right: 60px;
    width: 60px;
    height: 50px;
    background: #3a2a1a;
    border: 2px solid #2a1a0a;
}

.cabin::before {
    content: '';
    position: absolute;
    top: -25px;
    left: -5px;
    width: 70px;
    height: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-bottom: 30px solid #4a3a2a;
}

.cabin::after {
    content: '';
    position: absolute;
    top: 15px;
    left: 15px;
    width: 15px;
    height: 20px;
    background: #ff6600;
    box-shadow: 0 0 10px #ff6600;
}

.lake {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 80px;
    background: linear-gradient(180deg, #1a3a4a 0%, #0a2a3a 100%);
    border-top: 3px solid #2a4a5a;
}

.jason-figure {
    position: absolute;
    bottom: 90px;
    left: 60px;
    width: 50px;
    height: 80px;
    animation: float 3s ease-in-out infinite;
}

@keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
}

.jason-mask {
    width: 40px;
    height: 50px;
    background: #e8e8e8;
    border: 3px solid #fff;
    border-radius: 40% 40% 30% 30%;
    position: relative;
    box-shadow: 0 0 15px rgba(255, 0, 0, 0.5);
}

.jason-mask::before,
.jason-mask::after {
    content: '';
    position: absolute;
    width: 8px;
    height: 10px;
    background: #000;
    top: 15px;
}

.jason-mask::before { left: 8px; }
.jason-mask::after { right: 8px; }

.jason-body {
    width: 40px;
    height: 40px;
    background: #2a3a2a;
    margin-top: -5px;
    border: 2px solid #1a2a1a;
}

.jason-machete {
    position: absolute;
    right: -25px;
    top: 30px;
    width: 8px;
    height: 40px;
    background: #888;
    transform: rotate(-45deg);
    box-shadow: 0 0 10px rgba(255, 0, 0, 0.5);
}

.jason-machete::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: -2px;
    width: 12px;
    height: 10px;
    background: #ff6600;
}

.moon {
    position: absolute;
    top: 30px;
    right: 40px;
    width: 50px;
    height: 50px;
    background: #fff;
    border-radius: 50%;
    box-shadow: 0 0 30px rgba(255, 255, 255, 0.8);
}

/* RIGHT SCENE - HADDONFIELD (MICHAEL) */
.right-scene {
    background: linear-gradient(180deg, #1a1a2e 0%, #2a1a3a 50%, #1a0a1a 100%);
    border: 4px solid #3a2a4a;
    box-shadow: inset 0 0 50px rgba(0, 0, 0, 0.8);
}

.houses {
    position: absolute;
    bottom: 80px;
    width: 100%;
}

.house {
    position: absolute;
    width: 80px;
    height: 70px;
    background: #3a3a4a;
    border: 2px solid #2a2a3a;
    bottom: 0;
}

.house::before {
    content: '';
    position: absolute;
    top: -30px;
    left: -5px;
    width: 90px;
    height: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-bottom: 35px solid #4a3a3a;
}

.house::after {
    content: '';
    position: absolute;
    top: 20px;
    left: 20px;
    width: 18px;
    height: 25px;
    background: #ff9900;
    box-shadow: 
        0 0 15px #ff9900,
        30px 0 0 #ff9900,
        30px 0 15px #ff9900;
}

.house-1 { left: 20px; }
.house-2 { right: 20px; height: 60px; }

.street {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 80px;
    background: #2a2a2a;
    border-top: 3px solid #4a4a4a;
}

.street::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 4px;
    background: repeating-linear-gradient(
        90deg,
        #ff9900 0px,
        #ff9900 20px,
        transparent 20px,
        transparent 40px
    );
}

.michael-figure {
    position: absolute;
    bottom: 90px;
    right: 80px;
    width: 50px;
    height: 80px;
    animation: float 3s ease-in-out infinite 0.5s;
}

.michael-mask {
    width: 40px;
    height: 50px;
    background: #f5f5f5;
    border: 3px solid #fff;
    border-radius: 45% 45% 35% 35%;
    position: relative;
    box-shadow: 0 0 15px rgba(255, 102, 0, 0.5);
}

.michael-mask::before,
.michael-mask::after {
    content: '';
    position: absolute;
    width: 10px;
    height: 12px;
    background: #000;
    top: 15px;
    border-radius: 50%;
}

.michael-mask::before { left: 7px; }
.michael-mask::after { right: 7px; }

.michael-body {
    width: 40px;
    height: 40px;
    background: #1a1a2a;
    margin-top: -5px;
    border: 2px solid #0a0a1a;
}

.michael-knife {
    position: absolute;
    right: -20px;
    top: 35px;
    width: 6px;
    height: 30px;
    background: #aaa;
    transform: rotate(-30deg);
    box-shadow: 0 0 10px rgba(255, 102, 0, 0.5);
}

.michael-knife::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: -2px;
    width: 10px;
    height: 8px;
    background: #ff6600;
}

.pumpkin {
    position: absolute;
    bottom: 85px;
    left: 40px;
    width: 30px;
    height: 30px;
    background: #ff6600;
    border-radius: 50%;
    border: 2px solid #cc5500;
}

.pumpkin::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 8px;
    width: 0;
    height: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-bottom: 10px solid #000;
}

.pumpkin::after {
    content: '';
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 8px;
    height: 10px;
    background: #2a4a2a;
}

/* TITLE SECTION */
.title-section {
    text-align: center;
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    gap: 30px;
}

.title-backdrop {
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.95) 0%, rgba(20, 0, 0, 0.95) 100%);
    border: 6px solid #ff6600;
    padding: 40px 30px;
    position: relative;
    box-shadow: 
        0 0 50px rgba(255, 102, 0, 0.9),
        inset 0 0 50px rgba(0, 0, 0, 0.9),
        0 10px 30px rgba(0, 0, 0, 0.8);
    overflow: hidden;
}

.title-backdrop::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
        0deg,
        transparent 0px,
        transparent 2px,
        rgba(255, 102, 0, 0.03) 2px,
        rgba(255, 102, 0, 0.03) 4px
    );
    pointer-events: none;
}

.blood-drips {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 30px;
    background: linear-gradient(180deg, 
        #8b0000 0%, 
        #8b0000 40%,
        transparent 40%,
        transparent 45%,
        #8b0000 45%,
        #8b0000 60%,
        transparent 60%
    );
    background-size: 40px 30px;
    opacity: 0.6;
    animation: drip 3s ease-in-out infinite;
}

@keyframes drip {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(5px); }
}

.pixel-title {
    font-size: clamp(2.5rem, 7vw, 5.5rem);
    color: #ff6600;
    text-shadow: 
        5px 5px 0px #000,
        10px 10px 0px #8b0000,
        0 0 30px rgba(255, 102, 0, 1),
        0 0 60px rgba(255, 0, 0, 0.5);
    margin-bottom: 15px;
    letter-spacing: 4px;
    animation: glitch 3s infinite;
    position: relative;
    z-index: 2;
    line-height: 1.2;
}

.subtitle {
    font-size: clamp(0.7rem, 2vw, 1.1rem);
    color: #ccc;
    text-shadow: 
        2px 2px 0px #000,
        0 0 10px rgba(255, 102, 0, 0.5);
    letter-spacing: 2px;
    margin: 0;
    position: relative;
    z-index: 2;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    max-width: 600px;
    margin: 0 auto;
}

.stat-item {
    background: rgba(0, 0, 0, 0.9);
    border: 4px solid #ff6600;
    padding: 20px 15px;
    position: relative;
    box-shadow: 
        0 0 20px rgba(255, 102, 0, 0.5),
        inset 0 0 20px rgba(0, 0, 0, 0.8);
    transition: all 0.3s ease;
}

.stat-item:hover {
    transform: translateY(-5px);
    box-shadow: 
        0 0 30px rgba(255, 102, 0, 0.8),
        inset 0 0 20px rgba(0, 0, 0, 0.8);
    border-color: #fff;
}

.stat-item::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: repeating-linear-gradient(
        45deg,
        transparent,
        transparent 10px,
        rgba(255, 102, 0, 0.1) 10px,
        rgba(255, 102, 0, 0.1) 20px
    );
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.stat-item:hover::before {
    opacity: 1;
}

.stat-number {
    font-size: clamp(2rem, 4vw, 3rem);
    color: #ff6600;
    text-shadow: 
        3px 3px 0px #000,
        0 0 20px rgba(255, 102, 0, 0.8);
    font-weight: bold;
    margin-bottom: 8px;
    line-height: 1;
}

.stat-label {
    font-size: clamp(0.5rem, 1vw, 0.7rem);
    color: #ccc;
    letter-spacing: 2px;
    text-shadow: 1px 1px 0px #000;
}

.scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    font-size: clamp(0.5rem, 1.5vw, 0.7rem);
    color: #ff6600;
    animation: bounce 2s infinite;
    text-shadow: 0 0 10px rgba(255, 102, 0, 0.8);
    z-index: 2;
}

@keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(-15px); }
}

@keyframes glitch {
    0%, 90%, 100% { transform: translate(0); }
    92% { transform: translate(-3px, 3px); color: #ff6600; }
    94% { transform: translate(3px, -3px); color: #ff0000; }
    96% { transform: translate(-3px, -3px); color: #ff9900; }
}

/* RESPONSIVE */
@media (max-width: 1024px) {
    .scene-container {
        grid-template-columns: 1fr;
        gap: 30px;
    }
    
    .scene {
        height: 250px;
        max-width: 500px;
        margin: 0 auto;
    }
    
    .left-scene {
        order: 1;
    }
    
    .title-section {
        order: 2;
    }
    
    .right-scene {
        order: 3;
    }
    
    .stats-grid {
        max-width: 100%;
    }
}

@media (max-width: 768px) {
    .scene {
        height: 200px;
    }
    
    .jason-figure,
    .michael-figure {
        transform: scale(0.8);
    }
    
    .tree {
        width: 30px;
        height: 60px;
    }
    
    .house {
        width: 60px;
        height: 50px;
    }
    
    .title-backdrop {
        padding: 30px 20px;
    }
    
    .stats-grid {
        grid-template-columns: 1fr;
        gap: 15px;
        max-width: 300px;
    }
    
    .stat-item {
        padding: 15px 10px;
    }
}
