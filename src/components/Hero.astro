---
import SlasherCharacters from './SlasherCharacters.astro';
---

<section class="hero">
    <div class="glitch-container">
        <h1 class="glitch" data-text="SLASHER STATS">SLASHER STATS</h1>
    </div>
    <SlasherCharacters />
    <p class="subtitle pixel-text">The Data Behind the Masks</p>
    <div class="hero-stats">
        <div class="stat-box">
            <span class="stat-number" id="total-films">24</span>
            <span class="stat-label">FILMS</span>
        </div>
        <div class="stat-box">
            <span class="stat-number" id="total-kills">336</span>
            <span class="stat-label">KILLS</span>
        </div>
        <div class="stat-box">
            <span class="stat-number" id="total-box-office">$1.6B</span>
            <span class="stat-label">BOX OFFICE</span>
        </div>
    </div>
    <div class="scroll-indicator pixel-text">▼ SCROLL TO BEGIN ▼</div>
</section>

